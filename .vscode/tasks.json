{
    "version": "2.0.0",
    "tasks": [
        // Configure section
        {
            "type": "shell",
            "label": "CMake: Configure Debug",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-S.",
                "-Bbuild/Debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "CMake configure task for Debug"
        },
        {
            "type": "shell",
            "label": "CMake: Configure Release",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-S.",
                "-Bbuild/Release",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "CMake configure task for Release"
        },
        // Build section
        {
            "type": "shell",
            "label": "CMake: Debug build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--parallel",
                "16"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "CMake build task for Debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Configure Debug"
            ]
        },
        {
            "type": "shell",
            "label": "CMake: Release build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--parallel",
                "16"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "CMake build task for Release",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Configure Release"
            ]
        }
    ]
}
